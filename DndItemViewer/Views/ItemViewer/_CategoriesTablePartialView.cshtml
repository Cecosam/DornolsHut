@using DndItemViewer.Helpers
<script type="text/javascript">
    var activeCategory = '@TempData["Item Category"]';

    window.addEventListener("load", function () {
        var elements = document.getElementsByClassName("categoriesNames");
        $.each(elements, function (i, element) {
            if (element.id == activeCategory) {
                element.className = "table-info categoriesNames";
            }
            else {
                element.className = "table-active categoriesNames";
            }
        });
    }, false);
</script>
