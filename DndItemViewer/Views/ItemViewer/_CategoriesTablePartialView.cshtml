    <table class="table table-bordered table-active">
        <thead class="opacity-custom-95">
            <tr>
                <th>Categories</th>
            </tr>
        </thead>
        <tbody class="opacity-custom-95">
            <tr id="@Constants.ARMORS_TEXT" class="categoriesNames">
                <td>
                    <a class="nav-link text-uppercase" asp-controller="ItemViewer" asp-action="ShowArmors" asp-route-name="Padded">@Constants.ARMORS_TEXT</a>
                </td>
            </tr>
            <tr id="@Constants.SIMPLE_WEAPONS_TEXT" class="categoriesNames">
                <td>
                    <a class="nav-link text-uppercase" asp-controller="ItemViewer" asp-action="ShowWeapons" asp-route-category="@Constants.SIMPLE_WEAPONS_TEXT" asp-route-name="Club">@Constants.SIMPLE_WEAPONS_TEXT</a>
                </td>
            </tr>
            <tr id="@Constants.MARTIAL_WEAPONS_TEXT" class="categoriesNames">
                <td>
                    <a class="nav-link text-uppercase" asp-controller="ItemViewer" asp-action="ShowWeapons" asp-route-category="@Constants.MARTIAL_WEAPONS_TEXT" asp-route-name="Battleaxe">@Constants.MARTIAL_WEAPONS_TEXT</a>
                </td>
            </tr>
            <tr id="@Constants.RINGS_TEXT" class="categoriesNames">
